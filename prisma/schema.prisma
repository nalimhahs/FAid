// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Condition {
  id          Int       @id @default(autoincrement())
  name        String
  description String
  symptoms    Symptom[]
  treatment   Treatment @relation(fields: [treatmentId], references: [id])
  image       String?
  treatmentId Int       @unique
  category    Category
}

model Treatment {
  id          Int        @id @default(autoincrement())
  condition   Condition?
  name        String
  description String
  image       String?
}

model Symptom {
  id          Int        @id @default(autoincrement())
  condition   Condition? @relation(fields: [id], references: [id])
  name        String
  description String
  image       String?
  severity    Severity
  priority    Int
  question    String
  Session     Session?   @relation(fields: [sessionId], references: [id])
  sessionId   Int?
}

model Session {
  id       Int       @id @default(autoincrement())
  location String?
  symptoms Symptom[] 
}

enum Severity {
  POLICE
  MEDICAL
  BOTH
}

enum Category {
  CHOKING
  BURNS
}
